<div class="row" ng-controller="AccountCtrl as ctrl">
    <div class="col-sm-4">
        <form ng-submit="ctrl.register()">
            <h3>Register</h3>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" ng-model="ctrl.registerEmail">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" type="password" ng-model="ctrl.registerPassword">
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input class="form-control" type="password" ng-model="ctrl.registerPassword2">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Register</button>
            </div>
        </form>
    </div>

    <div class="col-sm-4">
        <h3>Log In</h3>
        <form ng-submit="ctrl.login()">
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" ng-model="ctrl.loginEmail">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" type="password" ng-model="ctrl.loginPassword">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Log In</button>
                <button class="btn btn-default" ng-click="ctrl.logout()">Log Out</button>
            </div>
        </form>
    </div>

    <div class="col-sm-4">
        <form ng-submit="ctrl.callApi()">
            <h3>Invoke API</h3>
            <div class="form-group">
                <label>User</label>
                <input class="form-control" type="text" readonly ng-model="ctrl.username">
            </div>
            <div class="form-group">
                <label>Result</label>
                <input class="form-control" type="text" readonly ng-model="ctrl.response">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Call API</button>
            </div>
        </form>
    </div>

    <button type="button" ng-click="ctrl.getClaimsFromToken()">Get Claims</button>
</div>
